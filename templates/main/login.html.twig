{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container">

        <div class="titre">
            <span class="titre2">
                <strong>Veuillez-vous connecter</strong>
            </span>
        </div>

        <div class="cadre">

            <div class="cadre2">


                <form method="post" class="text-dark bg-light p-4 d-block w-100">
                {% if error %}
                <div id="loginMessages" class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
                </div>
                {% endif %}

                <label for="inputEmail" class="formulaire"><strong>Email *</strong></label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="formulaire"><strong>Mot de passe *</strong></label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                      value="{{ csrf_token('authenticate') }}">


                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

                <div class="checkbox mb-3">
                    <label class="text-muted fs-5">
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                    <p class="text-muted fs-5">(* champs obligatoires )</p>
                </div>

                <div class="mb-4">
                    <button class="inscription-valid btn btn-success" type="submit">Valider</button>
                    <a href="{{ path('app_main_forgotten_password') }}"
                      class="inscription-oubli btn btn-warning">Mot de passe oublié
                    </a>
                </div>

                <span class="formulaire">
                    <strong>Si vous n'avez pas encore de compte, vous pouvez en créer un en cliquant sur ce bouton: </strong>
                </span>
                <a href="{{  path('app_main_register') }}" class="inscription-login btn btn-primary">
                    Inscription
                </a>
                <a href="{{ path('app_blog_index') }}" class="bouton-RaL btn btn">
                Retour à l'accueil du Blog
                </a>

            </div>

        </div>
    </div>

{% endblock %}
