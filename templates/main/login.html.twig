{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

     <div class="container px-5 mt-5" style="width:600px;border-radius:50px;border:solid 20px #229296;">


        <form method="post" class="text-dark bg-light my-5 p-4 d-block w-100">
        {% if error %}
        <div id="loginMessages" class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
         {% endif %}

        {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
        {% endif %}

        <h1 class="mb-3 font-weight-normal mx-auto fs-2 text-uppercase fst-italic" style="width: 500px;color: rgb(9, 90, 9);"><strong>Veuillez-vous connecter</strong></h1>
        <label for="inputEmail" class="fs-4 fst-italic"><strong>Email</strong></label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label for="inputPassword" class="fs-4 fst-italic"><strong>Mot de passe</strong></label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">


                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>


            <button class="mt-3 text-light" style="font-size:1.5rem;background-color: rgb(9, 90, 9);border:solid 2px #229296;" type="submit">Valider</button></br></br>

            <span class="fs-5 fst-italic">Pour cr√©er votre compte: </span><a href="{{  path('app_main_register') }}" class="m-3 px-2 py-2 text-light"
            style="font-size:1.5rem;background-color: #11494C;border:solid 2px #229296;">cliquez-ici</a>
        </form>


     </div>

{% endblock %}
