{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<section class="container my-3" style="height:600px;">
    <div class="row">
        <div class="col">
            <h1 class="text-light fst-italic my-5 text-decoration-underline"><strong>Réinitialisation du mot de passe</strong></h1>
            {{ form_start(requestPassForm, {'attr': {'class': 'style-form'}}) }}
                {{ form_row(requestPassForm.email, {'attr': {'class': 'style-form2'}}) }}
                <p class="text-muted"> Veuillez entrer une adresse E-mail correct afin de recevoir votre lien de réinitialisation du mot de passe !</p>
                <button type="submit" class="btn btn-warning my-5 fs-4 px-5 py-1 fst-italic" style="border-radius:25px;"><strong>Envoyer</strong></button>
            {{ form_end(requestPassForm) }}
        </div>
    </div>
</section>

{% endblock %}