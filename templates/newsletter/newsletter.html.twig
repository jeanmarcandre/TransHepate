                        {# </div> #}
                    {# </div> #}
					<script type="text/javascript" src="https://app.mailjet.com/statics/js/iframeResizer.min.js"></script>
				</div>
			</section>

		</div>

		<div class="m-5">
			<a class="text-decoration-none text-light fs-4 fst-italic py-2 px-3 m-5" style="border:solid 2px #73e0ed;background-color:#229296;border-radius:25px;" href="{{ path('app_main_home') }}">
				<strong>Retour à l'accueil</strong>
			</a>
		</div>

	</div>

{% endblock %}