{% extends 'base.html.twig' %}

{% block title %}ADMIN/{% block titleAdmin %}{% endblock %}{% endblock %}

{# BLOCK CSS #}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{# BLOCK JS #}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}

{####  MENU D'ADMINISTRATION  ####}
{% if is_granted('ROLE_ADMIN') %}
<nav class="navbar navbar-expand-lg py-0 mt-5" style="background-color:#11494c;">
  <div class="container-lg">
        <a class="navbar-brand inscription-login" href="{{ path('app_admin_home') }}"><i class="fa-solid fa-gear pe-2 fs-3"></i><strong>Administration</strong></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNavbar">
          {# <ul class="navbar-nav ms-auto mb-2 mb-lg-0"> #}
              <a class="navbar-brand inscription-login" href="{{ path('app_admin_user_index') }}"><i class="fa-solid fa-users-gear pe-2"></i><strong>Utilisateurs</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
          {# </ul> #}
        </div>
  </div>
</nav>
{% endif %}

{####  BLOCK PRINCIPAL ADMINISTRATION  ####}
<div id="main-admin"class="container-fluid text-light px-lg-5">

    {% block admin %}{% endblock %}

</div>

{% endblock %}