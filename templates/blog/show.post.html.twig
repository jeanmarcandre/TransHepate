{% extends 'base.html.twig' %}

{% block title %}Post.title{% endblock %}

{% block body %}

    <div class="text-dark bg-light my-5 p-4 d-block w-100">

        <h1 class="mx-auto fs-2 text-uppercase fst-italic" style="width: 400px;"><strong>Article</strong></h1>

        <table class="table">
            <tbody class="text-dark ">
                <tr>
                    <th>Title</th>
                    <td>{{ post.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ post.slug }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ post.content }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ post.createdAt|date('d/m/Y H:i:')}}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ post.updatedAt ? post.updatedAt|date('d/m/Y H:i:') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_blog_index') }}" class="btn btn-success">Retour Ã  la liste</a>

        <a href="{{ path('app_blog_edit_post', {'id': post.id}) }}"  class="btn btn-warning">Modifier</a>

        {{ include('blog/_delete_form.post.html.twig') }}

    </div>

{% endblock %}
